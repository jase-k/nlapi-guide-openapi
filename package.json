{
  "name": "nlapi-guide-openapi",
  "version": "1.0.0",
  "description": "This repository is to introduce you to concepts of conversation-first design principles and how the NLAPI can help you achieve that.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prepare": "husky",
    "build": "npm run build --workspaces",
    "seed": "npm run seed --workspace=server",
    "dev": "npm run start-db && npm-run-all --parallel --print-label dev:client dev:server",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "start-db": "node scripts/start-db.js",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "format": "npm run format --workspaces",
    "check-todos": "grep -r --exclude-dir=node_modules --exclude-dir=.vite 'TODO:' . && echo 'TODOs found, please resolve them before pushing.' && exit 1 || exit 0",
    "check-env": "node scripts/check-env.js",
    "setup-nlapi-portal": "node scripts/setup-nlapi-portal.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "packageManager": "pnpm@9.5.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "form-data": "^4.0.1",
    "node-fetch": "2.6.7"
  }
}
