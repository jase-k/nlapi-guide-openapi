{
  "name": "nlapi-guide-openapi",
  "version": "1.0.0",
  "description": "This repository is to introduce you to concepts of conversation-first design principles and how the NLAPI can help you achieve that.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm-run-all --parallel --print-label dev:client dev:server",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "packageManager": "pnpm@9.5.0",
  "workspaces": [
    "packages/*"
  ]
}
